rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function userDoc() { return get(/databases/$(database)/documents/users/$(request.auth.uid)); }
    function hasUserDoc() { return isSignedIn() && userDoc().exists(); }
    function role() { return hasUserDoc() ? userDoc().data.role : null; }
    function shopId() { return hasUserDoc() ? userDoc().data.shopId : null; }
    function employeeId() { return hasUserDoc() ? userDoc().data.employeeId : null; }
    function isOwnerOf(shop) { return hasUserDoc() && role() == 'owner' && shopId() == shop; }
    function isStaffOf(shop) { return hasUserDoc() && role() == 'staff' && shopId() == shop; }

    match /users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    match /shops/{shop} {
      allow read: if isOwnerOf(shop);
      allow create, update, delete: if isOwnerOf(shop);

      match /employees/{empId} {
        allow read: if isOwnerOf(shop) || (isStaffOf(shop) && employeeId() == empId);
        allow create, update, delete: if isOwnerOf(shop);
      }

      match /weeks/{weekId} {
        allow read: if isOwnerOf(shop) || isStaffOf(shop);
        allow write: if isOwnerOf(shop);
      }

      match /payments/{paymentId} {
        allow read: if isOwnerOf(shop) || (isStaffOf(shop) && resource.data.employeeId == employeeId());
        allow create, update, delete: if isOwnerOf(shop);
      }

      match /receipts/{receiptId} {
        allow read: if isOwnerOf(shop) || (isStaffOf(shop) && resource.data.employeeId == employeeId());
        allow create, update, delete: if isOwnerOf(shop);
      }

      match /statuses/{statusId} {
        allow read: if isOwnerOf(shop) || (isStaffOf(shop) && resource.data.employeeId == employeeId());
        allow create, update, delete: if isOwnerOf(shop);
      }

      match /invites/{inviteId} {
        allow read: if false;
        allow create, update, delete: if isOwnerOf(shop);
      }

      match /auditLogs/{logId} {
        allow read: if isOwnerOf(shop);
        allow create: if isOwnerOf(shop);
        allow update, delete: if false;
      }
    }

    match /mail/{mailId} {
      allow read, write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
